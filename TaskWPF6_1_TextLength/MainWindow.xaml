<Window x:Class="TaskWPF6_1_TextLength.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskWPF6_1_TextLength"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:BoolToVisibleConverter x:Key="VisibleConverter"/>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <TextBox Text="Введите текст здесь"
                     x:Name="text"
                     Margin="10"/>
            <CheckBox Content="Показать детали"
                      x:Name="details"
                      Margin="10"/>
            <StackPanel Visibility="{Binding ElementName=details, Path=IsChecked, Converter={StaticResource VisibleConverter}}">
                <TextBlock Margin="10"
                           Text="{Binding ElementName=text, Path=Text.Length, StringFormat='Длина текста: {0}'}"
                           x:Name="textLength"/>
                <ProgressBar Margin="10"
                             Height="15"
                             Maximum="100"
                             Value="{Binding ElementName=text, Path=Text.Length, Mode=OneWay}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
