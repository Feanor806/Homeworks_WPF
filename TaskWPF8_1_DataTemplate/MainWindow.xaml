<Window x:Class="TaskWPF8_1_DataTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskWPF8_1_DataTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="500">
    <Window.Resources>
        <DataTemplate x:Key="ListBoxTemplate">
            <Border x:Name="border" 
                    BorderBrush="DarkGray" 
                    BorderThickness="2" 
                    CornerRadius="5" 
                    Padding="10">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MaxWidth="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="{Binding ImagePath}" 
                           HorizontalAlignment="Center" 
                           Grid.Row="0" 
                           MaxHeight="200" 
                           MaxWidth="200"
                           Margin="10"/>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Наименование товара:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ProductName}"/>
                        <TextBlock Text="Цена товара:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ProductPrice, StringFormat='{}{0:N2} ₽'}" />
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding ProductType}">
                    <DataTrigger.Value>
                        <local:ProductTypes>Food</local:ProductTypes>
                    </DataTrigger.Value>
                    <Setter TargetName="border" Property="Background" Value="DarkSeaGreen"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding ProductType}">
                    <DataTrigger.Value>
                        <local:ProductTypes>HomeAppliances</local:ProductTypes>
                    </DataTrigger.Value>
                    <Setter TargetName="border" Property="Background" Value="CadetBlue"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>
    <StackPanel>
        <TextBlock Text="Список товаров" 
                   Margin="10" 
                   HorizontalAlignment="Center" 
                   FontSize="20" 
                   FontStyle="Oblique"/>
        <ListBox x:Name="lstProducts"
                 ItemsSource="{Binding Products}"
                 Margin="10" 
                 HorizontalContentAlignment="Stretch"
                 ItemTemplate="{StaticResource ListBoxTemplate}"/>
    </StackPanel>
</Window>
