<Window x:Class="TaskWPF1_1_Clicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskWPF1_1_Clicker"
        mc:Ignorable="d"
        Title="Счётчик кликов" Height="260" Width="310"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,0">
        <Button Name="Button" Content="Кликни!" 
                Margin="25,100,0,0" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                HorizontalContentAlignment="Center"
                Height="100"
                Width="250" 
                Click="Button_Click"/>
        
        <TextBlock Name ="Clicks" Margin="25,25,0,0" 
                   HorizontalAlignment="Left"  
                   TextWrapping="Wrap" 
                   Text="0" 
                   VerticalAlignment="Top"
                   TextAlignment="Center"
                   FontSize="26"
                   Width="250"
                   Height="40"/>
    </Grid>
</Window>
