<Window x:Class="TaskWPF1_2_TrafficLights.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskWPF1_2_TrafficLights"
        mc:Ignorable="d"
        Title="Светофор" Height="670" Width="250">
    <Grid>
        <Ellipse Margin="50,30,0,0" 
                 Name ="Red"
                 Height="150"  
                 Width="150"
                 Stroke="Black" 
                 StrokeThickness="2"
                 Fill="#FFD23C1E"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left" />
        <Ellipse Margin="50,200,0,0"
                 Name ="Yellow"
                 Height="150"  
                 Width="150"
                 Stroke="Black" 
                 StrokeThickness="2"
                 Fill="Gray"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left" />
        <Ellipse Margin="50,370,0,0"
                 Name ="Green"
                 Height="150"  
                 Width="150"
                 Stroke="Black"
                 StrokeThickness="2"
                 Fill="Gray"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left" />
        <Button Margin="50,550,0,0" 
                Content="Переключение"
                Height="70"  
                Width="150"
                VerticalAlignment="Top"
                HorizontalAlignment="Left" Click="Button_Click" />

    </Grid>
</Window>
