<Window x:Class="TaskWPF2_1_TextRedactor.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskWPF2_1_TextRedactor"
        mc:Ignorable="d"
        Title="О программе" 
        MinHeight="250" MinWidth="300"
        MaxHeight="250" MaxWidth="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Простой текстовый редактор" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" FontWeight="Bold"/>
        <Image Source="Data\LiveAva.png" HorizontalAlignment="Center" Grid.Row="1"/>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Автор: Солнцев Михаил Александрович" 
                       Grid.Row="0"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" FontSize="9"/>
            <TextBlock Text="Версия: 1.0"
                       Grid.Row="1"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontSize="9"/>
            <TextBlock Text="Дата: 06.07.2025"
                       Grid.Row="2"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontSize="9"/>
        </Grid>
        <Button Name ="AboutClose" 
                Content="Закрыть"
                MinWidth="200"
                HorizontalAlignment="Center"
                Grid.Row="4" Click="AboutClose_Click"/>


    </Grid>
</Window>
