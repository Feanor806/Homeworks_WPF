<Window x:Class="TaskWPF2_1_TextRedactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskWPF2_1_TextRedactor"
        mc:Ignorable="d"
        Title="Текстовый редактор" 
        Height="450" Width="800"
        MinHeight="200" MinWidth="300" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="20"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" 
                    Content="Открыть" Margin="10,10,10,10" 
                    HorizontalAlignment="Center"  
                    VerticalAlignment="Center" Click="Open_Click"/>
            <Button Grid.Column="1" Margin="10,10,10,10" 
                    Content="Сохранить как" 
                    HorizontalAlignment="Center"  
                    VerticalAlignment="Center" Click="Save_As_Click"/>
            <Button Grid.Column="2" Margin="10,10,10,10"
                    Content="О программе" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" Click="About_Click"/>

        </Grid>
        <TextBox Name="Text" 
                 Grid.Row="1"
                 BorderBrush="Black"
                 BorderThickness="2"
                 TextWrapping="Wrap" 
                 HorizontalContentAlignment="Stretch" 
                 HorizontalScrollBarVisibility="Auto" 
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True" 
                 AcceptsTab="True" 
                 AutoWordSelection="True" />
        <StatusBar Name ="StatusBar" 
                   Grid.Row="2">
            <StatusBarItem>
                <TextBlock Name="StatusText" 
                           Text="Готов"
                           VerticalAlignment="Center"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
