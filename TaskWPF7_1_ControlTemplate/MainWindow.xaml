<Window x:Class="TaskWPF7_1_ControlTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskWPF7_1_ControlTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="300">
    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="FontFamily" Value="GOST Common"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Rectangle Grid.Row="0" 
                                       Margin="1"
                                       RadiusX="3"
                                       RadiusY="3"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Stroke="Gray"
                                       Width="20" Height="20"
                                       StrokeThickness="2"
                                       Opacity="1"/>
                            <TextBlock x:Name="checker" 
                                       Grid.Row="0"
                                       Text="X"
                                       Margin="1"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Opacity="0"/>
                            <Ellipse x:Name="nullCase" 
                                     Grid.Row="0" 
                                     Margin="1"
                                     Height="10" Width="10"
                                     Fill="Black"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Opacity="1"/>
                            <ContentPresenter Grid.Row="1"
                                              Content="{TemplateBinding Content}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checker"  Property="Opacity" Value="1"/>
                                <Setter TargetName="nullCase"  Property="Opacity" Value="0"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="checker"  Property="Opacity" Value="0"/>
                                <Setter TargetName="nullCase"  Property="Opacity" Value="0"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="checker"  Property="Opacity" Value="0"/>
                                <Setter TargetName="nullCase"  Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal">
            <CheckBox Content="UnChecked" IsChecked="False"/>
            <CheckBox Content="Checked" IsChecked="True"/>
            <CheckBox Content="Indeterminate" IsChecked="{x:Null}"/>
        </StackPanel>
    </Grid>
</Window>
