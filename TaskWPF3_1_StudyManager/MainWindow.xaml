<Window x:Class="TaskWPF3_1_StudyManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskWPF3_1_StudyManager"
        mc:Ignorable="d"
        Title="Выбор курса" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="120"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10" Grid.Row="0" >
            <Label Content="Имя студента:"/>
            <TextBox x:Name="studentName"/>
            <Label Content="Факультет:"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="faculty" Grid.Column="0" IsEditable="True" SelectedIndex="-1">
                    <ComboBoxItem>Программирование</ComboBoxItem>
                    <ComboBoxItem>Строительство</ComboBoxItem>
                    <ComboBoxItem>Теплогазоснабжение и вентиляция</ComboBoxItem>
                </ComboBox>
                <Button x:Name="refreshCourses" Grid.Column="1" Content="Обновить курсы" Click="refreshCourses_Click"/>
            </Grid>
        </StackPanel>
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="Доступные курсы:" Grid.Row="0"/>
            <ListBox x:Name ="courses" SelectionMode="Single" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
